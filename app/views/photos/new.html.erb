<h1>Photos#new</h1>

   <%=form_with model: @photos, class: "flex flex-column gap-4 mb-4" do |f|%>
      <div class="input">
        <%=f.label :title, class: "content-xs overline"%>
        <div class="input__container">
          <%=f.text_field :name, class: "input__content"%>
        </div>
       <%=show_errors(@photos, :title)%>
      </div>

      <div class="input">
        <%=f.label :description, class: "content-xs overline"%>
        <div class="input__container">
          <%=f.text_area :description, class: "input__content"%>
        </div>
        <%=show_errors(@photos, :description)%>
      </div>

<div class="select">
<%if @category.id?%>
    <%=f.label :category_id, class: "content-xs overline"%>
    <%= f.collection_select :category_id, Category.order(:name), :id, :name, { selected: @category.id }, class: "select__input" %>
    <%=show_errors(@category, :category_id)%>
    <%end%>
    
  </div>
  
      <div>
        <%=f.label :image, class: "content-xs overline"%>
        <div>
          <%=f.file_field :image, accept: "image/png, image/jpeg"%>
        </div>
      </div>

      <%=f.submit class: "button button--secondary"%>
    <%end%>
