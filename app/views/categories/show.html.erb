<section>
    <div>
        <h1><%=@category.name%></h1>
        <p><%=@category.description%></p>
        <%=link_to "New photo", new_photo_path(category_id: @category.id)%>
        <div>
            <%@photos.each do |photo|%>
                <div>
                    <%=image_tag photo.image%>
                    <div>
                        <%=link_to photo.name, photo_path(photo)%>
                        <span ><%=photo.comments_count%> comments</span>
                    </div>
                    <div>
                        <%=link_to "Edit", edit_photo_path(photo)%>
                        <%=link_to "Destroy", photo_path(photo), data: { turbo_method: :delete, 
                                                                         turbo_confirm: "Seguro?" }%>
                    </div>
                </div>
            <%end%>
        </div>
    </div>
    <div>   
    <%=form_with model: [@category, @comment], method: :post do |f|%>
        <%=f.text_area :body%>
        <%=f.submit%>
    <%end%>
    </div>
    <div>
        <h2>Comments</h2>
        <%@comments.each do |comment|%>
            <hr>
            <p><%=comment.body%></p>
            <span>Sent <%=time_ago_in_words(comment.created_at)%> ago</span> 
            <%=link_to "Destroy", comment_path(comment), data: { turbo_method: :delete, 
                                                                 turbo_confirm: "Seguro?" }%>
        <%end%>
    </div>
</section>
