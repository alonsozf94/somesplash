<section class="section-sm flex flex-column">
  <h1 class="heading">New category</h1>
    <% if @categories.errors.any?%>
    <p>Something went wrong:</p>
    <ul>
      <% @categories.errors.full_messages.each do |categorie|%>
      <li><%=categorie%></li>
      <%end%>
    </ul>
  <%end%>

  <%=form_with model: @categories, class: "flex flex-column" do |f|%>
    <div class="input">
      <%=f.label :name, class: "content-xs overline"%>
      <div class="input__container">
        <%=f.text_field :name, placeholder: "Technology", class: "input__content"%>
      </div>
    </div>

    <div class="input">
      <%=f.label :description, class: "content-xs overline"%>
      <div class="input__container">
        <%=f.text_area :description, placeholder: "Exploring our complicated relationship with technology...", class: "input__content"%>
      </div>
    </div>

    <div>
      <%=f.label :cover, class: "content-xs overline"%>
      <div>
        <%=f.file_field :cover, accept: "image/png, image/jpeg"%>
      </div>
    </div>

    <%=f.submit class: "button button-primary"%>
  <%end%>

  <%=link_to "Back", categories_path, class: "button button-secondary center-text"%>
</section>