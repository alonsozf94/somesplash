<section>
    <div>
      <h1>Categories</h1>
      <%=link_to "New Category", new_category_path, class: "button button--secondary button--sm mb-4 fit-content"%>
      <div>
        <%@categories.each do |category|%>
          <div>
            <%if category.cover.attached?%>
              <%=image_tag category.cover%>
            <%end%>
            <div>
              <%=link_to category.name, category_path(category)%>
              <span ><%=category.photos_count%> photos</span>
            </div>
            <div>
              <%=link_to "Edit", edit_category_path(category)%>
              <%=link_to "Destroy", category_path(category), data: { turbo_method: :delete, 
                                                                     turbo_confirm: "Seguro?" }%>
            </div>
          </div>
        <%end%>
      </div>
    </div>
</section>